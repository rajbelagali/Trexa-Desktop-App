{
  "name": "trexaapp",
  "version": "1.0.18",
  "description": "Trexa Electron App",
  "author": "Raju Belagali",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.trexa.trexaapp",
    "productName": "Trexa",
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "artifactName": "Trexa-Setup-${version}.exe",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "Trexa-${version}.exe"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "rajbelagali",
        "repo": "Trexa-Desktop-App"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^26.0.12"
  }
}
